generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id         Int       @id @default(autoincrement())
  name       String
  password   String
  email      String    @unique
  roleId     Int       @default(3)
  created_at DateTime? @default(now()) @db.Timestamp(6)

  Role Role @relation(fields: [roleId], references: id)
  Orders  Orders[]
}

model Orders {
  id            Int       @id @default(autoincrement())
  city          String
  name          String
  mobile        String
  address       String
  comment       String?   
  price         Int
  deliveryPrice Int
  sum           Int
  statusId      Int      @default(1)
  courierId     Int?
  created_at    DateTime? @default(now()) @db.Timestamp(6)

  status     status    @relation(fields: [statusId], references: id)
  Users   Users? @relation(fields: [courierId], references: [id])
}

model status {
  id   Int    @id @default(autoincrement())
  name String

  Orders   Orders[]
}



model Role {
  id   Int    @id @default(autoincrement())
  name String

  Users Users[]
}
